<div id="setup">
	<%= error_messages_for @ivar %>
	<%= form_for @ivar, :action => url(MA[:routes][:user][:index]) do %>
	  <p>
	    <%= text_field :email, :label => "Email" %>
	  </p>
	  <p>
	    <%= text_field :login, :label => "Nickname" %>
	  </p>
	  <p>
	    <%= password_field :password, :label => "Password", :class => "text" %>
	  </p>
	  <p>
	    <%= password_field :password_confirmation, :label => "Password Confirmation", :class => "text" %>
	  </p>
	  <p>
	    <%= button "Sign up", :class => "button positive" %>
	  </p>
	<% end =%>
</div>